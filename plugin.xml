<?xml version="1.0" encoding="utf-8"?>
<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
        id="com.unico.hello"
        version="0.7.0">

  <name>Hello</name>

  <engines>
    <engine name="cordova" version=">=3.4.0"/>
  </engines>

  <asset src="www/hello.js" target="js/hello.js"/>

  <js-module src="www/hello.js" name="hello">
    <clobbers target="hello" />
  </js-module>

  <platform name="android">

    <config-file target="res/xml/config.xml" parent="/*">
      <feature name="UnicoCheckModule">
        <param name="android-package" value="com.unico.plugin.UnicoCheckModule"/>
      </feature>
    </config-file>

    <!--<source-file src="src/android/Hello.java" target-dir="src/com/unico/plugin/"/>-->
	<framework src="src/android/build.gradle" custom="true" type="gradleReference" />
    <source-file src="src/android/UnicoCheckModule.java" target-dir="src/com/unico/plugin/" />
    <source-file src="src/android/UnicoConfigLiveness.java" target-dir="src/com/unico/plugin/" />
	<source-file src="src/android/UnicoConfigDefault.java" target-dir="src/com/unico/plugin/" />
	<source-file src="src/android/UnicoTheme.java" target-dir="src/com/unico/plugin/" />
  </platform>
