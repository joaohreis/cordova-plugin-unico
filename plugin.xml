<?xml version="1.0" encoding="utf-8"?>
<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
        id="com.unico.check"
        version="0.8.6">

  <name>Unico Check</name>

<!--  <asset src="www/check.js" target="js/check.js"/>-->

  <platform name="android">

	<js-module src="www/check.js" name="UnicoCheckModule">
		<clobbers target="UnicoCheckModule" />
	</js-module>
    
	<config-file target="res/xml/config.xml" parent="/*">
      <feature name="UnicoCheckModule">
        <param name="android-package" value="com.unico.plugin.UnicoCheckModule"/>
      </feature>
    </config-file>

	<framework src="src/android/build.gradle" custom="true" type="gradleReference" />
    <source-file src="src/android/UnicoCheckModule.java" target-dir="src/com/unico/plugin/" />
	<source-file src="src/android/UnicoConfigDefault.java" target-dir="src/com/unico/plugin/" />
	<source-file src="src/android/UnicoTheme.java" target-dir="src/com/unico/plugin/" />
  </platform>

  <platform name="ios">
  
	<js-module src="www/check.js" name="UnicoCheckModule">
		<clobbers target="UnicoCheckModule" />
	</js-module>
    
    <config-file target="config.xml" parent="/*">
      <feature name="UnicoCheckModule">
        <param name="ios-package" value="UnicoCheckModule" />
		<param name="onload" value="true" />
      </feature>
    </config-file>

    <header-file src="src/ios/UnicoCheckModule.h" />
    <source-file src="src/ios/UnicoCheckModule.m" />
	<header-file src="src/ios/UnicoCheckViewController.h" />
    <source-file src="src/ios/UnicoCheckViewController.m" />
	<header-file src="src/ios/UnicoConfig.h" />
    <source-file src="src/ios/UnicoConfig.m" />
	<header-file src="src/ios/UnicoTheme.h" />
	<source-file src="src/ios/UnicoTheme.m" />
	
	<podspec>
		<config>
			<source url="https://cdn.cocoapods.org/"/>
		</config>
		<pods use-frameworks="true">
			<pod name="unicocheck-ios" spec="2.3.10"/>
		</pods>
	</podspec>
  </platform>

</plugin>